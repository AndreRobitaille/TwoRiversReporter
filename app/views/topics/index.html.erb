<h1>Topics</h1>

<div style="display: flex; flex-wrap: wrap; gap: 10px;">
  <% @topics.each do |topic| %>
    <%= link_to topic_path(topic), style: "text-decoration: none;" do %>
      <div style="background: #f7fafc; border: 1px solid #cbd5e0; padding: 10px; border-radius: 8px;">
        <span style="font-weight: bold; color: #2d3748;"><%= topic.name %></span>
        <span style="color: #718096; font-size: 0.9em; margin-left: 5px;">(<%= topic.agenda_items.count %>)</span>
      </div>
    <% end %>
  <% end %>
</div>
