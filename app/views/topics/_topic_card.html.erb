<%= link_to topic_path(topic), class: "card card--clickable card--topic" do %>
  <div class="card-header">
    <div class="card-header-row">
      <h3 class="card-title"><%= topic.name %></h3>
      <%= topic_lifecycle_badge(topic.lifecycle_status) if topic.lifecycle_status %>
    </div>
    <% if topic.description.present? %>
      <p class="card-subtitle"><%= truncate(topic.description, length: 80) %></p>
    <% end %>
  </div>
  <div class="card-body">
    <% if topic.topic_briefing&.headline.present? %>
      <p class="card-latest"><%= topic.topic_briefing.headline %></p>
    <% end %>
    <div class="card-footer-row">
      <% if topic.last_activity_at %>
        <span class="card-meta">Updated <%= time_ago_in_words(topic.last_activity_at) %> ago</span>
      <% end %>
      <span class="btn btn--secondary btn--sm">More info â†’</span>
    </div>
  </div>
<% end %>
