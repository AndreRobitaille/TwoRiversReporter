<%= link_to topic_path(topic), class: "topic-list-item" do %>
  <div class="topic-list-item__header">
    <span class="topic-list-item__name"><%= topic.name %></span>
    <%= topic_lifecycle_badge(topic.lifecycle_status) if topic.lifecycle_status %>
  </div>
  <% appearance = @worth_watching_next_appearances[topic.id] %>
  <% if appearance %>
    <div class="topic-list-item__meta">
      Next: <%= appearance[:starts_at].strftime("%b %-d") %> &middot; <%= appearance[:body_name] %>
    </div>
  <% end %>
  <% signals = @worth_watching_signals[topic.id] %>
  <% if signals %>
    <div class="topic-list-item__signals">
      <% signals.each do |label| %>
        <span class="badge badge--signal badge--signal-warm"><%= label %></span>
      <% end %>
    </div>
  <% end %>
<% end %>
