<div class="week-group">
  <h3 class="week-group__label"><%= group[:label] %></h3>

  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Committee</th>
          <th class="meeting-topics-col">Topics</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% group[:meetings].each do |meeting| %>
          <%= render "meeting_row", meeting: meeting %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
