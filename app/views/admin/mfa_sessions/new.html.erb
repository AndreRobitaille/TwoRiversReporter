<% if flash[:alert] %>
  <div class="flash flash--danger"><%= flash[:alert] %></div>
<% end %>

<div class="card card--narrow">
  <div class="card-header">
    <h1 class="card-title">Multi-factor authentication</h1>
    <p class="card-subtitle">Enter a 6-digit code or a recovery code.</p>
  </div>

  <%= form_with url: mfa_session_path do |form| %>
    <div class="form-group">
      <%= form.label :code, "Authentication code", class: "form-label" %>
      <%= form.text_field :code, required: true, autofocus: true, autocomplete: "one-time-code", placeholder: "123456 or XXXX-XXXX", class: "form-input" %>
    </div>

    <%= form.submit "Sign in", class: "btn btn--primary" %>
  <% end %>
</div>
