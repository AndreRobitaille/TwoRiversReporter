<% if flash[:alert] %>
  <div class="flash flash--danger"><%= flash[:alert] %></div>
<% end %>
<% if flash[:notice] %>
  <div class="flash flash--success"><%= flash[:notice] %></div>
<% end %>

<div class="card card--narrow">
  <div class="card-header">
    <h1 class="card-title">Change password</h1>
    <p class="card-subtitle">Youâ€™ll stay signed in, but other sessions will be revoked.</p>
  </div>

  <%= form_with url: account_password_path, method: :patch do |form| %>
    <div class="form-group">
      <%= form.label :current_password, class: "form-label" %>
      <%= form.password_field :current_password, required: true, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "New password", class: "form-label" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm new password", class: "form-label" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72, class: "form-input" %>
    </div>

    <div class="flex gap-2">
      <%= form.submit "Update password", class: "btn btn--primary" %>
      <%= link_to "Cancel", admin_root_path, class: "btn btn--secondary" %>
    </div>
  <% end %>
</div>
